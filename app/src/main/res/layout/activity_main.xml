<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi Biodata"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="208dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/fotoKuliah"
                android:layout_width="150dp"
                android:layout_height="208dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/foto_kuliah" />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="NIM : A11.2021.13294"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Nama : Septian Ade Hidayat"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/hobi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Hobi : Bermain Game dan Olahraga"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/deskripsiSingkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Mahasiswa aktif program studi S-1 Teknik Informatika. Selalu termotivasi untuk mencoba hal baru, berpikir kritis dan kreatif serta memiliki kemampuan untuk berkomunikasi dengan baik."
            android:textAlignment="center"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/cekAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat alamat detail :"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALAMAT"
            android:onClick="showMap"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/kontak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi saya :"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonTelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TELEPON"
            android:onClick="telepon"/>

        <Button
            android:id="@+id/buttonEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:onClick="email"/>
    </LinearLayout>
</ScrollView>